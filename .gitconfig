[user]
	name = Yuta Mizui
	email = me@mziyut.com
[push]
	default = simple
	autoSetupRemote = true
[core]
	excludesfile = ~/.gitignore
	editor = nvim
	pager = lv -c
	autocrlf = input
[color]
	ui = auto
[alias]
	ad = add
	ci = commit
	co = checkout
	cop = !"git branch --all | tr -d '* ' | grep -v -e '->' | peco | sed -e 's+remotes/[^/]*/++g' | xargs git checkout"
	d1 = diff HEAD~
	d2 = diff HEAD~~
	d3 = diff HEAD~~~
	d4 = diff HEAD~~~~
	d5 = diff HEAD~~~~~
	dc = diff --cached
	delete-merged-branches = !git branch --merged | grep -vE '^\\*|master$|main$|develop$' | xargs -I % git branch -d %
	delete-branche = !git branch | grep -v 'master' | peco | xargs -I % git branch -D %
	dmas = diff master
	dmai = diff main
	ds = diff --staged
	dw = diff --color-words
	fe = fetch
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	pl = pull
	st = status
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[ghq]
	root = ~/Workspace
[credential "https://github.com"]
	helper = 
	helper = !/usr/local/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/local/bin/gh auth git-credential
